{
	"name": "Recipe API Django App",
	"dockerComposeFile": "../docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/app",
	"shutdownAction": "stopCompose",
	
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance", 
				"ms-python.debugpy",
				"batisteo.vscode-django",
				"ms-toolsai.jupyter"
			],
			
			// Set *default* container specific settings.json values on container create.
			"settings": {
				"python.pythonPath": "/py/bin/python",
				"python.defaultInterpreterPath": "/py/bin/python",
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
				"python.formatting.autopep8Path": "/py/bin/autopep8",
				"python.formatting.blackPath": "/py/bin/black",
				"python.formatting.yapfPath": "/py/bin/yapf",
				"python.linting.flake8Path": "/py/bin/flake8",
				"python.linting.pycodestylePath": "/py/bin/pycodestyle",
				"python.linting.pydocstylePath": "/py/bin/pydocstyle",
				"python.linting.pylintPath": "/py/bin/pylint",
				"python.testing.unittestEnabled": true,
				"python.testing.pytestEnabled": false,
				"python.testing.unittestArgs": [
					"-v",
					"-s",
					".",
					"-p",
					"test*.py"
				],
				"emmet.includeLanguages": {
					"django-html": "html"
				}
			}
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8000],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "python manage.py migrate",

	// Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "django-user"
}